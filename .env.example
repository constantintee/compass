# ==============================================================================
# Compass Stock Predictor - Environment Variables
# ==============================================================================
# SECURITY: Copy this file to .env and configure with your values.
# NEVER commit .env to version control!

# ==============================================================================
# Django Settings
# ==============================================================================

# CRITICAL: Generate a unique secret key for production!
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-production-secret-key-here

# Set to False in production!
DEBUG=False

# Allowed hosts (space-separated)
ALLOWED_HOSTS=localhost 127.0.0.1

# CSRF trusted origins (space-separated, include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:5000 http://127.0.0.1:5000

# ==============================================================================
# Database Configuration
# ==============================================================================

DB_ENGINE=django.db.backends.postgresql
DB_NAME=stock_predictor
DB_USER=postgres
DB_PASSWORD=change-this-password-in-production
DB_HOST=localhost
DB_PORT=5432

# Database SSL mode: 'disable', 'prefer', 'require', 'verify-ca', 'verify-full'
# Use 'require' or higher for production
DB_SSLMODE=prefer

# ==============================================================================
# Redis Configuration (for caching and Celery)
# ==============================================================================

REDIS_URL=redis://redis:6379/1
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ==============================================================================
# Security Settings
# ==============================================================================

# SSL redirect (set to True when behind HTTPS proxy)
SECURE_SSL_REDIRECT=False

# HSTS settings (in seconds, 31536000 = 1 year)
SECURE_HSTS_SECONDS=31536000

# Rate limiting
RATELIMIT_ENABLE=True
RATELIMIT_DEFAULT=100/h

# ==============================================================================
# Logging
# ==============================================================================

DJANGO_LOG_LEVEL=INFO

# ==============================================================================
# Development Settings
# ==============================================================================

# Set to true for development mode (uses Django dev server)
DJANGO_DEBUG=false
